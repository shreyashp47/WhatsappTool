<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_radio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.taxivaxi.spoc.BookingForm.RadioFragment"
    tools:showIn="@layout/activity_radio">

    <ScrollView
        android:isScrollContainer="false"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="55dp"
                android:src="@drawable/building"
                android:layout_marginTop="21dp" />
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:layout_width="match_parent"
                android:paddingStart="23dp"
                android:paddingLeft="23dp"
                android:layout_height="35dp"
                android:textSize="@dimen/text_size"
                android:layout_marginTop="30dp"
                android:hint="Assessment Code"
                android:id="@+id/radio_pickup_city" />
            <View style="@style/Divider"
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/radio_pickup_city"/>


            <ImageView
                android:layout_width="25dp"
                android:layout_height="55dp"
                android:src="@drawable/dot_pickup_icon"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/radio_pickup_city"/>
            <com.rey.material.widget.TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="32dp"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:textSize="@dimen/text_size"
                android:maxLines="2"
                android:layout_below="@+id/radio_pickup_city"
                android:textColor="@color/taxi_vaxi_text_color_gray"
                android:textColorHint="@color/taxi_vaxi_text_color_gray"
                android:hint="@string/pickup_location"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/radio_pickup"
                android:clickable="true"
                />
            <View style="@style/Divider"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/radio_pickup"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="55dp"
                android:src="@drawable/more_icon"
                android:layout_marginTop="37dp"
                android:layout_below="@+id/radio_pickup_city"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="55dp"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/radio_pickup"

                android:src="@drawable/placeholder" />

            <com.rey.material.widget.TextView
                android:layout_below="@+id/radio_pickup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="32dp"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:maxLines="2"
                android:hint="@string/drop_location"
                android:textColorHint="@color/taxi_vaxi_text_color_gray"
                android:textColor="@color/taxi_vaxi_text_color_gray"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/radio_drop"
                android:textSize="@dimen/text_size"
                android:clickable="true" />
            <View style="@style/Divider"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/radio_drop"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date_range_black_24dp"
                android:paddingTop="43dp"
                android:layout_below="@+id/radio_drop"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>
            <com.rey.material.widget.TextView
                android:layout_marginTop="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingTop="11dp"
                android:layout_below="@+id/radio_drop"
                android:hint="Pickup Date"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/radio_date"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:textSize="@dimen/text_size"
                android:textColorHint="@color/taxi_vaxi_text_color_gray"
                android:textColor="@color/taxi_vaxi_text_color_gray" />
            <View style="@style/Divider"
                android:layout_width="110dp"

                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/radio_date"/>

            <ImageView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_access_time_black_24dp"
                android:layout_marginTop="43dp"
                android:layout_below="@+id/radio_drop"
                android:layout_marginEnd="145dp"
                android:layout_marginRight="145dp"
                android:layout_alignParentRight="true"

                android:layout_alignParentEnd="true"/>

            <com.rey.material.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="@dimen/text_size"
                android:paddingTop="11dp"
                android:paddingStart="29dp"
                android:paddingEnd="29dp"
                android:layout_alignStart="@+id/time"
                android:layout_alignLeft="@+id/time"
                android:layout_marginTop="35dp"
                android:textColorHint="@color/taxi_vaxi_text_color_gray"
                android:textColor="@color/taxi_vaxi_text_color_gray"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:hint="Pickup Time"
                android:id="@+id/radio_time"
                android:layout_below="@+id/radio_drop" />
            <View style="@style/Divider"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="140dp"
                android:layout_marginStart="43dp"
                android:layout_marginLeft="43dp"
                android:layout_below="@+id/radio_time"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/assessment_layout"
                android:layout_below="@+id/radio_date">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/building"
                android:layout_marginTop="21dp"
                android:id="@+id/imageView2" />
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:layout_width="150dp"
                android:paddingStart="23dp"
                android:paddingLeft="23dp"
                android:layout_height="35dp"
                android:textSize="@dimen/text_size"
                android:layout_marginTop="30dp"
                android:hint="Assessment Code"
                android:id="@+id/assessment_city" />
            <View style="@style/Divider"
                android:layout_width="110dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/assessment_city"/>



            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/notedpad_icons"
                android:layout_marginTop="27dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="144dp"
                android:layout_marginRight="144dp"/>
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:layout_width="151dp"
                android:paddingStart="3dp"
                android:paddingLeft="3dp"
                android:layout_height="35dp"
                android:textSize="@dimen/text_size"
                android:layout_marginTop="30dp"
                android:hint="Assessment Code"
                android:id="@+id/assessnment"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <View style="@style/Divider"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="140dp"
                android:layout_below="@+id/assessnment"/>

            </RelativeLayout>


            <ImageView
                android:layout_width="25dp"
                android:layout_height="55dp"
                android:src="@drawable/business_traveller_icon"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/assessment_layout"
                android:layout_marginEnd="150dp"
                android:layout_marginRight="150dp"/>
            <com.rey.material.widget.TextView
                android:layout_marginTop="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingTop="11dp"
                android:layout_below="@id/assessment_layout"
                android:hint="Passengers"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/passengers"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:textSize="@dimen/text_size"
                android:textColorHint="@color/taxi_vaxi_text_color_gray"
                android:textColor="@color/taxi_vaxi_text_color_gray" />

            <View style="@style/Divider"
                android:layout_width="110dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/passengers"/>

            <EditText
                android:windowSoftInputMode="adjustPan|adjustResize"
                android:layout_width="match_parent"
                android:hint="Reason for Booking"
                android:textColorHint="@color/taxi_vaxi_text_color_gray"
                android:textColor="@color/taxi_vaxi_color_black"
                android:textSize="@dimen/text_size"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="12dp"
                android:id="@+id/radio_reason_for_booking"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/passengers"
                android:layout_alignParentStart="true" />


            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/radio_submit_button"
                android:text="Submit"
                android:backgroundTint="@color/bg_green_text_color"

                android:layout_marginTop="17dp"
                android:textColor="@color/cardview_light_background"
                android:elevation="6dp"
                android:layout_marginBottom="50dp"
                android:layout_below="@+id/radio_reason_for_booking"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
