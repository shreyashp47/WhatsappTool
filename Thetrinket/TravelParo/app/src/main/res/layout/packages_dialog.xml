<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="240dp"
    android:layout_height="340dp">

        <RelativeLayout
            android:background="@color/white"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_relative"
            android:layout_centerHorizontal="true">

            <com.rey.material.widget.TextView
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_preview"
                android:hint="@string/app_name"
                android:layout_centerHorizontal="true"
                android:text="Select Packages"

                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="12sp" />
            <View style="@style/Divider"
                android:id="@+id/divider"
                android:layout_below="@+id/text_preview"/>

        </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:id="@+id/center_image"
        android:layout_below="@+id/divider">

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/no_packages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Packages"
            android:visibility="gone"/>
        <ListView
            android:layout_width="match_parent"
            android:id="@+id/list"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


        <com.rey.material.widget.Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ok"
            android:layout_below="@+id/center_image"
            android:text="ok"
            app:rd_enable="true"
            app:rd_rippleType="wave"
            android:layout_centerInParent="true"
            android:background="@color/taxi_vaxi_color_black"
            android:textColor="@color/cardview_light_background" />


</LinearLayout>