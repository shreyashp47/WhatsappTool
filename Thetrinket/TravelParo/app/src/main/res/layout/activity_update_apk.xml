<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/splash_screen"
    tools:context="com.taxivaxi.employee.activities.UpdateApkActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:id="@+id/update_apk"
            android:textStyle="bold"
            android:background="@color/taxi_vaxi_color_more_light_gray"
            android:layout_gravity="bottom"
            android:text="The apk version running on your device is unsupported please update your app to enjoy the service.\nTap to update"
            android:textSize="18dp"
            android:padding="10dp"
            android:textColor="@color/taxi_vaxi_color_black"
            android:layout_margin="5dp"/>
    </LinearLayout>

</FrameLayout>
